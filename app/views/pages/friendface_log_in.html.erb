<body class="bg-gray-100">
  <div class="px-4">
    <div class="max-w-sm mx-auto text-center">
      <div class="mt-8">
        <h1 class="text-6xl font-bold tracking-tight text-blue-500">friendface</h1>
        <p class="mt-3 text-2xl leading-7">
          Connect with friends and the world around you on Friendface.
        </p>
      </div>

      <div class="mt-12">
        <div class="mt-12 p-4 mx-auto bg-white shadow-lg rounded-lg">
          <%= form_with do |form| %>
            <%= form.text_field :email, type: :email, placeholder: "Email or phone number", class: "p-3 border rounded-md block w-full focus:placeholder-gray-300" %>
            <%= form.password_field :password, placeholder: "Password", class: "mt-3 p-3 border rounded-md block w-full focus:placeholder-gray-300" %>

            <%= form.submit "Log In", class: "mt-3 p-3 bg-blue-500 hover:bg-blue-600 cursor-pointer text-white text-lg font-bold block w-full rounded-md" %>
          <% end %>

          <div class="my-4 text-center">
            <%= link_to "Forgot password?", "", class: "center hover:underline text-blue-500 text-sm" %>
          </div>

          <hr>

          <div class="mt-6 mb-2 text-center">
            <%= link_to "Create new account", "", class: "p-3 inline-block bg-green-500 hover:bg-green-600 text-white font-bold text-center rounded-md" %>
          </div>
        </div>

        <div class="mt-6 text-sm text-center">
          <strong>Create a Page</strong> for a celebrity, brand or business.
        </div>
      </div>
    </div>
  </div>
</body>
